<style>
    span.ios16, span.otheros {
        display: none;
    }

    html.ios16 span.ios16 {
        display: block;
    }

    html.otheros span.otheros {
        display: block;
    }
</style>
<script>
    function isiOS16OrLater() {
        const ua = navigator.userAgent || navigator.vendor || window.opera;
        const isModernIPad = navigator.platform === 'MacIntel' && navigator.maxTouchPoints > 1;
        const isIOSDevice = /iPad|iPhone|iPod/.test(ua) || isModernIPad;

        if (!isIOSDevice) return false;

        const iOSMatch = ua.match(/OS (\d+)_?(\d+)?/);

        if (iOSMatch) {
            const major = parseInt(iOSMatch[1], 10);
            return major >= 16;
        }

        if (isModernIPad) return true;

        return false;

    }

    document.addEventListener('DOMContentLoaded', function () {
        const htmlEl = document.documentElement;

        if (isiOS16OrLater()) {
            htmlEl.classList.add('ios16');
        } else {
            htmlEl.classList.add('otheros');
        }
    });
</script>
