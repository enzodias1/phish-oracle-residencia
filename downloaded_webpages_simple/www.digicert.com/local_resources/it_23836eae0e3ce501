  <script async data-lazy id="__ada" data-handle="digicert-gen" src="https://static.ada.support/embed2.js"></script>
  <!-- ADA chatbot for contact us page -->
  <script type="text/javascript">
    let conversationEnded = false;
    let isStarted = false;
    let drawerOpen = false;
    let dc1conversationEnded = false;
    let isdc1Started = false;
    let dc1DrawerOpen = false;
    let loadBot = () => {
      if (!isStarted) {
        //Check if DC1 chatbot was active 
        if (isdc1Started) {
          window.adaEmbed.stop();
        }
        // Starting embed
        window.adaEmbed.start({
          handle: "digicert-gen",
          onAdaEmbedLoaded: () => {
            console.log("embed loaded.");
            console.log("Toggling chat");
            adaEmbed.toggle();
            isStarted = true;
            //Subscribing to the end_conversation event
            window.adaEmbed.subscribeEvent("ada:end_conversation", (data, context) => {
              console.log("The conversation has been ended by the user.");
              conversationEnded = true;
            });
          },
          toggleCallback: (isDrawerOpen) => {
            //toggle callback to check if the drawer has been closed after ending the conversation.
            console.log("drawer open:", isDrawerOpen)
            if (conversationEnded && !isDrawerOpen) {
              console.log("Conversation has been ended and the drawer has been closed")
              //Stopping the bot if the conversation has ended, and the drawer is toggled close
              adaEmbed.stop();
              isStarted = false;
            }
          }
        });
      }
      else {
        adaEmbed.toggle();
      }
    }

    let loadPkiBot = () => {
      if (!isdc1Started) {
        //Check if support chatbot was active 
        if (isStarted) {
          window.adaEmbed.stop();
        }
        // Starting embed
        window.adaEmbed.start({
          handle: "dc1-digicert-gen",
          onAdaEmbedLoaded: () => {
            console.log("DC1 embed loaded.");
            console.log("Toggling DC1 chat");
            adaEmbed.toggle();
            isdc1Started = true;
            //Subscribing to the end_conversation event
            window.adaEmbed.subscribeEvent("ada:end_conversation", (data, context) => {
              console.log("The DC1 conversation has been ended by the user.");
              dc1conversationEnded = true;
            });
          },
          toggleCallback: (dc1DrawerOpen) => {
            //toggle callback to check if the drawer has been closed after ending the conversation.
            console.log("DC1 drawer open:", dc1DrawerOpen)
            if (dc1conversationEnded && !dc1DrawerOpen) {
              console.log("DC1 Conversation has been ended and the drawer has been closed")
              //Stopping the bot if the conversation has ended, and the drawer is toggled close
              adaEmbed.stop();
              isdc1Started = false;
            }
          }
        });
      }
      else {
        adaEmbed.toggle();
      }
    }
  </script>
