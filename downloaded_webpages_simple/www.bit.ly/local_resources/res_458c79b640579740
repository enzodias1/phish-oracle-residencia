<script>const websitehost = location.hostname; const tld = websitehost.split('.').pop(); document.body.classList.add(tld); var exitIntentTimeout; var idleDurationSecs = 23; var idleTimeout; var exitIntent = jQuery('.modal-window__wrapper'); var closeMethod = 'unknown'; jQuery('.modal-window__content-main .btn-primary').click(function (event) { var dataObject = { event: 'exit_intent_cta_clicked', category: 'Javascript Trigger', label: 'Get started for free' }; if (typeof dataLayer !== 'undefined') { dataLayer.push(dataObject); } jQuery('.modal-window__wrapper').hide(); jQuery('body').removeClass('modal-open'); }); jQuery('.modal-window__close').click(function (event) { closeMethod = "close-button"; jQuery('.modal-window__wrapper').fadeOut(); jQuery('body').removeClass('modal-open').trigger('classChanged'); console.log('close-button'); }); jQuery('.modal-window__wrapper').click(function (event) { isbackdrop = jQuery(event.target).hasClass('has-overlay'); console.log(isbackdrop); if(isbackdrop === true) { closeMethod = "backdrop"; jQuery('.modal-window__wrapper').fadeOut(); jQuery('body').removeClass('modal-open').trigger('classChanged'); console.log('backdrop'); } }); jQuery(document).on('keydown', function (e) { ismodalopen = jQuery('body').hasClass('modal-open'); if (e.key === 'Escape' && ismodalopen === true) { closeMethod = "escape-button"; jQuery('.modal-window__wrapper').fadeOut(); jQuery('body').removeClass('modal-open').trigger('classChanged'); } }); jQuery('body').on('classChanged', function () { console.log('CLOSED'); if (closeMethod === 'unknown') { closeMethod = 'escape-button'; } var duration = 1; if (closeMethod === 'close-button') { duration = 168 } var labels = { 'escape-button': 'Escape key', 'backdrop': 'Outside click', 'close-button': 'Close click' }; var label = labels[closeMethod] || 'Close click'; var dataObject = { event: 'exit_intent_closed', category: 'Javascript Trigger', label: label }; if (typeof dataLayer !== 'undefined') { dataLayer.push(dataObject); } console.log("Modal closed by:", closeMethod); closeMethod = 'unknown'; if (detector) detector.setIsShown(false); setCookie('exitintent_show', 'true', duration); }); function resetIdleTimeout() { if (!getCookie('exitintent_show')) { if (idleTimeout) { clearTimeout(idleTimeout); } idleTimeout = setTimeout(function () { return showExitIntent('idle') + setCookie('exitintent_show', 'true', 7); }, idleDurationSecs * 1000); } } function showExitIntent(reason) { if(jQuery('body').hasClass('no-pop') === false){ jQuery('.modal-window__wrapper').fadeIn('slow'); jQuery('body').addClass('modal-open'); var dataObject = { event: 'exit_intent_opened', category: 'Javascript Trigger', label: 'Open exit-intent' }; if (typeof dataLayer !== 'undefined') { dataLayer.push(dataObject); } } } function setCookie(c_name, value, exhours) { var exdate = new Date(); exdate.setTime(exdate.getTime() + (exhours * 60 * 60 * 1000)); var c_value = encodeURIComponent(value) + ((exhours == null) ? "" : "; expires=" + exdate.toUTCString()); document.cookie = c_name + "=" + c_value + "; domain=" + window.location.hostname + "; path=/"; } function getCookie(c_name) { var i, x, y, ARRcookies = document.cookie.split(";"); for (i = 0; i < ARRcookies.length; i++) { x = ARRcookies[i].substr(0, ARRcookies[i].indexOf("=")); y = ARRcookies[i].substr(ARRcookies[i].indexOf("=") + 1); x = x.replace(/^\s+|\s+$/g, ""); if (x == c_name) { return unescape(y); } } } function createExitIntentDetector(options) { options = options || {}; var config = { sensitivity: options.sensitivity || 20, maxY: options.maxY || 100, delay: options.delay || 1000, timer: options.timer || 0 }; for (var key in options) { if (options.hasOwnProperty(key)) { config[key] = options[key]; } } var onExit = options.onExit || function () {}; var isShown = false; var afkTimer = null; var delayTimer = null; var isSafari = /^((?!chrome|android).)*safari/i.test(navigator.userAgent); function isMobile() { return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent); } function triggerExit() { if (!isShown) { if (config.delay > 0) { delayTimer = setTimeout(debounceExit, config.delay); } else { isShown = true; onExit(); } } } function debounceExit() { isShown = true; onExit(); } function mouseHandler(e) { if (isShown) return; if (isSafari) { if (e.type === 'mouseout') { var from = e.relatedTarget || e.toElement; if ((!from || from.nodeName === "HTML") && e.clientY <= config.maxY) { triggerExit(); } } } else { if (e.type === 'mouseleave' && e.clientY <= config.maxY) { triggerExit(); return; } if (e.type === 'mousemove' && e.clientY > config.sensitivity) { clearTimeout(delayTimer); } } } function init() { if (!isMobile()) { if (isSafari) { document.addEventListener('mouseout', mouseHandler); window.addEventListener('mousemove', function(e) { if (e.clientY > config.sensitivity) { clearTimeout(delayTimer); } }); } else { document.addEventListener('mousemove', mouseHandler); document.addEventListener('mouseleave', mouseHandler); } if (config.timer && config.timer > 0) { afkTimer = setTimeout(triggerExit, config.timer); } } } function destroy() { document.removeEventListener('mousemove', mouseHandler); document.removeEventListener('mouseleave', mouseHandler); if (afkTimer) clearTimeout(afkTimer); } var setIsShown = function (shown) {isShown = shown}; init(); return {setIsShown,destroy }; } var detector = createExitIntentDetector({ sensitivity: 10, maxY: 100, delay: 400, timer: 0, onExit: function () { if (getCookie('exitintent_show')) return; showExitIntent('exit') } });</script>
